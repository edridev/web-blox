
<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :room %>
    <%= f.association :user %>
    <%= f.input :data %>
    <%= f.input :hora %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
