<%= show_messages %>

<h1><%= tr :book, "activerecord.models", 2 %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= tr :user, "activerecord.attributes.book" %></th>
      <th><%= tr :room, "activerecord.attributes.book" %></th>
      <th><%= tr :book_date, "activerecord.attributes.book" %></th>
      <th><%= tr :schedule, "activerecord.attributes.book" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.user.full_name %></td>
        <td><%= book.room.name %></td>
        <td><%= book.book_date.strftime("%d/%m/%Y") %></td>
        <td><%= book.schedule %></td>
        <td colspan="3" class="table-action">
          <%= link_to fa_icon("eye"), book, class: 'text-primary', title: tr(:show, "actions"), id: "view-#{book.id}" %>
          <%= link_to fa_icon("edit"), edit_book_path(book), class: 'text-success', title: tr(:edit, "actions"), id: "edit-#{book.id}" %>
          <%= link_to fa_icon("trash"), book, method: :delete, data: { confirm: tr('questions.are_you_sure') }, class: 'text-danger', title: tr(:destroy, "actions"), id: "destroy-#{book.id}" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to fa_icon("plus", text: tr('title.book.new')), new_book_path, class: 'btn btn-secondary' %>

