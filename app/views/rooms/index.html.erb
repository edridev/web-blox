<%= show_messages %>

<h1><%= tr :room, "activerecord.models", 2 %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= tr :name, "activerecord.attributes.room" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td>
          <%= link_to room.name, room %>
        </td>
        <td colspan="3" class="table-action">
          <%= link_to fa_icon("eye"), room, class: 'text-primary', title: tr(:show, "actions"), id: "view-#{room.id}" %>
          <%= link_to fa_icon("edit"), edit_room_path(room), class: 'text-success', title: tr(:edit, "actions"), id: "edit-#{room.id}" %>
          <%= link_to fa_icon("trash"), room, method: :delete, data: { confirm: tr('questions.are_you_sure') }, class: 'text-danger', title: tr(:destroy, "actions"), id: "destroy-#{room.id}" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to fa_icon("plus", text: tr('title.room.new')), new_room_path, class: 'btn btn-secondary' %>
