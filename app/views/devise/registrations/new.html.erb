<div class="card">
  <div class="card-header" style="text-align:center;">
    <h4><%= tr 'title.sign_up' %></h4>
  </div>
  <div class="card-body">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { autocomplete: 'off' }) do |f| %>
      <div class="auth form-inputs">
        
        <%= f.input :email,
                    placeholder: tr("sample.email"),
                    label: false,
                    required: true,
                    autofocus: true %>
        <%= f.input :password,
                    label: false,
                    required: true,
                    placeholder: tr('password', 'activerecord.attributes.user'),
                    hint: tr('devise.shared.minimum_password_length','',@minimum_password_length) %>
        <%= f.input :password_confirmation,
                    placeholder: tr('password_confirmation', 'activerecord.attributes.user'),
                    label: false,
                    required: true %>

      </div>
      <div class="auth form-actions d-grid gap-2">
        <%= f.button :submit, tr("devise.registrations.new.sign_up"), class: "btn btn-success" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>

